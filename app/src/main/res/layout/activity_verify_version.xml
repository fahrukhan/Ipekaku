<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tbuonomo.materialsquareloading.MaterialSquareLoading
        android:id="@+id/material_square_loading_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:innerColor="@color/colorAccent"
        app:outerColor="@color/colorPrimary"
        app:rotationOuterDuration="9850"
        app:rotationInnerDuration="6423"
        app:innerRadius="8dp"
        app:outerRadius="8dp" />
    <TextView
        android:id="@+id/textLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/material_square_loading_view"
        android:textColor="@android:color/white"
        android:text="Please Wait"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>